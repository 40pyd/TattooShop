@model _2ScullTattooShop.Models.ViewModels.TattooViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
            <h2>Create and add new tattoo</h2>
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Style
                        <a class="btn btn-warning btn-xs" asp-area="" asp-controller="Styles" asp-action="Create">Add new Style</a>
                    </label>
                    <select asp-for="StyleId" class="form-control" asp-items="ViewBag.StyleId">
                        <option selected="selected" disabled="disabled">select the style</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Author
                        <a class="btn btn-warning btn-xs" asp-area="" asp-controller="Brands" asp-action="Create">Add new Author</a>
                    </label>
                    <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorId">
                        <option selected="selected" disabled="disabled">select the style</option>
                    </select>
                </div>
                <div class="form-group text-center">
                    <div id="upload_button">
                        <label>
                            <input name="Image" type="file" class="form-control">
                            <span class="btn btn-primary">Add new image for tattoo</span>
                        </label>
                    </div>
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="List" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4"></div>
</div>
