@model _2ScullTattooShop.Models.ViewModels.TattooViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
            <h2>Edit the tattoo information</h2>
            @if (ViewBag.Image != null)
            {
                <div>
                    <img class="img-responsive img-rounded center-block"
                         src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" />
                </div>
            }
            else
            {
                <img src="~/images/Tattoos/scull_temp.jpg" alt="" class="img-responsive center-block">
            }
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Style
                        <a class="btn btn-warning btn-xs" asp-area="" asp-controller="Styles" asp-action="Create">Add new style</a>
                    </label>
                    <select asp-for="StyleId" class="form-control" asp-items="ViewBag.Styles"></select>
                    <span asp-validation-for="StyleId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Author
                        <a class="btn btn-warning btn-xs" asp-area="" asp-controller="Aythors" asp-action="Create">Add new author</a>
                    </label>
                    <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.Authors"></select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <div id="upload_button">
                        <label>
                            <input name="Image" type="file" class="form-control">
                            <span class="btn btn-primary">Add new image for tattoo</span>
                        </label>
                    </div>
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="List" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
