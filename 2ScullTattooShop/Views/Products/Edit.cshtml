@model _2ScullTattooShop.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
            <h2>Edit the product information</h2>
            @if (ViewBag.Image != null)
            {
                <div>
                    <img class="img-responsive img-rounded center-block"
                         src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" />
                </div>
            }
            else
            {
                <img src="~/images/Tattoos/scull_temp.jpg" alt="" class="img-responsive center-block">
            }
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Category
                        <a class="btn btn-warning btn-xs" asp-area="" asp-controller="Categories" asp-action="Create">Add new Category</a>
                    </label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Brand
                        <a class="btn btn-warning btn-xs" asp-area="" asp-controller="Brands" asp-action="Create">Add new Brand</a>
                    </label>
                    <select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <div id="upload_button">
                        <label>
                            <input name="Image" type="file" class="form-control">
                            <span class="btn btn-primary">Add new image for product</span>
                        </label>
                    </div>
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="List" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
        </div>
        </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

