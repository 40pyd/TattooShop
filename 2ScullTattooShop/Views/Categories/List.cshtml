@model _2ScullTattooShop.Models.ViewModels.CategoriesListViewModel

@{
    ViewData["Title"] = "List";
}

<div id="advantages">
    <div class="container">
        <div class="same-height-row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div class="box same-height clickable">
                    <div class="icon">
                        <i class="fa fa-indent"></i>
                    </div>
                    <h3><a asp-area="" asp-action="Create">Add new category</a></h3>
                    <p>Categories are used to describe product information</p>
                </div>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </div>
</div>
<div id="all">

    <div id="content">
        <div class="container">
            <div class="col-md-12">

                <div class="row products">
                    @foreach (var item in Model.Categories)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="product main-boxshadow" data-animate="fadeInUp">
                                <div class="flip-container">
                                    <div class="flipper">
                                        <div class="front">
                                                <img src="~/images/Sculls/Без названия.jpg" alt="" class="img-responsive center-block">
                                            
                                        </div>
                                        <div class="back">
                                                <img src="~/images/Sculls/Без названия.jpg" alt="" class="img-responsive center-block">
                                            
                                        </div>
                                    </div>
                                </div>
                                <a class="invisible">
                                        <img src="~/images/Sculls/Без названия.jpg" alt="" class="img-responsive">
                                    
                                </a>
                                <div class="text">
                                    <h3><strong><a asp-action="Details" asp-route-id="@item.CategoryId">@item.Name</a></strong></h3>
                         
                                    <p class="buttons">
                                            <a class="btn btn-primary btn-small" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                                            <a class="btn btn-danger btn-small" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                                        
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div page-model="@Model.PageViewModel" page-action="List" page-classes-enable="true"
             page-class="btn" page-class-normal="btn-default"
             page-class-selected="btn-primary" class="btn-group pull-right">
        </div>
    </div>
</div>
