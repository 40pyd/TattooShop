@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div id="all">
    <div id="content">
        <div class="container">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
                    <h3>We are sorry - this page is not here anymore</h3>
                    <h4 class="text-muted">Error 404 - Page not found</h4>

                    <p class="text-center">To continue please use the <strong>Search form</strong> or <strong>Menu</strong> above.</p>

                    <p class="buttons">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary"><i class="fa fa-home"></i> Go to Homepage</a>
                    </p>
                </div>
            </div>
            <div class="col-md-2"></div>

        </div>
    </div>
</div>


