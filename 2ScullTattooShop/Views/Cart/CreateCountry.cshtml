
@model _2ScullTattooShop.Models.ViewModels.CountryViewModel

@{
    ViewData["Title"] = "CreateCountry";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
<h2>Add new country</h2>
            <form asp-action="CreateCountry" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
