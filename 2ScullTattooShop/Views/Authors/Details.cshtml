@model _2ScullTattooShop.Models.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Details";
}

<div id="all">
    <div id="content">
        <div class="container">

                <div class="col-md-4">
            <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
                    <h3 style="color:dimgrey;">@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.Sername) </h3>
                    <h4 style="color:dimgrey;">@Html.DisplayFor(model => model.Age) years of practice</h4>
                    </div>
                    <div class="box white main-boxshadow" id="details">
                        <div class="social">
                            <h4>Show it to your friends</h4>
                            <p>
                                <a href="https://uk-ua.facebook.com" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                                <a href="https://www.instagram.com" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                                <a href="https://twitter.com/?lang=ru" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="row" id="productMain">
                        <div class="col-sm-12">
                            <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
                                @if (ViewBag.Image != null)
                                {
                                    <div>
                                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" alt="" class="img-circle center-block">
                                    </div>
                                }
                                <br />
                                <h2 class="text-center">@Model.NickName</h2>

                                <div class="row" id="thumbs">
                                    <div class="col-xs-4">
                                        <a class="thumb">
                                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" alt="" class="img-responsive center-block">
                                        </a>
                                    </div>
                                    <div class="col-xs-4">
                                        <a class="thumb">
                                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" alt="" class="img-responsive center-block">
                                        </a>
                                    </div>
                                    <div class="col-xs-4">
                                        <a class="thumb">
                                            <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" alt="" class="img-responsive ">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </div>


                </div>
                <div class="text-center">
                    <p>
                        @if (ViewBag.IsAdmin)
                        {
                            <a asp-action="Edit" class="btn btn-warning btn-lg" asp-route-id="@Model.AuthorId">Edit</a>
                        }
                        <a asp-action="List" class="btn btn-primary btn-lg">Back to List</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
