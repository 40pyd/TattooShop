@model _2ScullTattooShop.Models.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Delete";
}
<div id="all">

    <div id="content">
        <div class="container">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
                    <h2>Delete the author</h2>
                    <hr />
                    <h3 style="color:red;">Are you sure you want to delete <span style="color:white;">@Model.NickName</span> author?</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.Name)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Sername)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Sername)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.NickName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.NickName)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.Age)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.Age)
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-8 text-center">

                            @if (ViewBag.Image != null)
                            {
                                <img class="image-fluid" style='max-width:50%; height:auto;'
                                     src="data:image/jpeg;base64,@(Convert.ToBase64String(@ViewBag.Image))" />
                            }
                        </div>
                    </div>
                    <hr />
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="AuthorId" />
                        <input type="submit" value="Delete the author" class="btn btn-danger" />
                        <a asp-action="List" class="btn btn-primary">Back to List</a>
                    </form>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</div>
