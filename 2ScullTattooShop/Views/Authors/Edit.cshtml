@model _2ScullTattooShop.Models.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit the authors information</h2>
<hr />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div id="sorry-background" class="box info-bar main-boxshadow text-center" data-animate="fadeInUpBig">
                @if (ViewBag.Image != null)
                {
                    <div>
                        <img class="img-responsive img-rounded center-block"
                             src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" />
                    </div>
                }
                else
                {
                    <img src="~/images/Tattoos/scull_temp.jpg" alt="" class="img-responsive center-block">
                }
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sername" class="control-label"></label>
                        <input asp-for="Sername" class="form-control" />
                        <span asp-validation-for="Sername" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NickName" class="control-label"></label>
                        <input asp-for="NickName" class="form-control" />
                        <span asp-validation-for="NickName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <div id="upload_button">
                            <label>
                                <input name="Image" type="file" class="form-control">
                                <span class="btn btn-primary">Add new photo for author</span>
                            </label>
                        </div>
                        <input type="submit" value="Save" class="btn btn-success" />
                        <a asp-action="List" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
    </div>
    <div class="col-md-3"></div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

